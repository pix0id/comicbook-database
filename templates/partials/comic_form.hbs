<form id="add-comic">
    <ul>
        <li>
            <label for="comic-title">Title</label>
            <input type="text" id="comic-title" name="title" placeholder="Title">
        </li>
        <li>
            <label for="issue-number">Issue</label>
            <input type="text" id="issue-number" name="issue" placeholder="Issue">
            <sub>Enter a range such as "1-6" for collections</sub>
        </li>
        <li>
            <select name="comic-type" id="comic-type" name="comicType">
                <option value="">Select...</option>
                <option value="single-issue">Single Issue</option>
                <option value="tpb">Trade Paper Back</option>
                <option value="omnibus">Omnibus</option>
            </select>
        </li>
        <li>
            <label for="publisher">Publisher</label>
            <input type="text" id="publisher" name="publisher" placeholder="Publisher">
        </li>
        <li>
            <p>Have you read this issue?</p>
            <input type="radio" name="read" id="read-yes" value="yes"> Yes
            <input type="radio" name="read" id="read-no" value="no"> No
        </li>
    </ul>
    <button type="submit">Submit</button>


</form>