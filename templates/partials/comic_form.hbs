<div class="container">
    <form id="add-comic">
        <div class="row">
            <div class="col s3">
                <input type="text" id="issue-number" name="issue" placeholder="Issue">
            </div>
            <div class="col s7">
                <input type="text" id="comic-title" name="title" placeholder="Title">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s3">
                <select name="category" id="category">
                    <option value="" disabled selected>Select a Category</option>
                    <option value="Single Issue">Single Issue</option>
                    <option value="Collection">Collection</option>
                    <option value="Graphic Novel">Graphic Novel</option>
                    <option value="Trade Paperback">Trade Paperback</option>
                    <option value="Omnibus">Omnibus</option>
                </select>
            </div>
            <div class="col s3">
                <input type="text" id="publisher" name="publisher" placeholder="Publisher">
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <label>
                    <input type="checkbox" name="read" id="read">
                    <span>Have you read this issue yet?</span>
                </label>
            </div>
        </div>
        <button type="submit">Submit</button>
    </form>
</div>